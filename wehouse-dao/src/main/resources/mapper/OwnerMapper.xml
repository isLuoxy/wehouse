<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.l99.wehouse.dao.OwnerDao">

    <resultMap id="ownerResultMap" type="cn.l99.wehouse.pojo.Owner">
        <id property="id" column="id"/>
        <result property="ownerName" column="owner_name"/>
        <result property="ownerPassword" column="owner_password"/>
        <result property="ownerPhone" column="owner_phone"/>
        <result property="ownerStatus" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="lastLoginTime" column="last_login_time"/>
    </resultMap>

    <insert id="insertOwner" parameterType="cn.l99.wehouse.pojo.Owner">
        insert into owner(owner_name, owner_password, owner_phone, create_time, last_login_time, status)
        values (#{ownerName}, #{ownerPassword}, #{ownerPhone}, #{createTime}, #{lastLoginTime}, #{status})
    </insert>

    <select id="selectOwnerByOwnerName" parameterType="String" resultMap="ownerResultMap">
        select *
        from owner
        where owner_name = #{ownerName};
    </select>

    <select id="selectOwnerByOwnerPhone" parameterType="String" resultMap="ownerResultMap">
        select *
        from owner
        where owner_phone = #{ownerPhone}
    </select>

    <select id="selectOwnerByOwnerId" parameterType="String" resultMap="ownerResultMap">
        select *
        from owner
        where id = #{ownerId}
    </select>
</mapper>